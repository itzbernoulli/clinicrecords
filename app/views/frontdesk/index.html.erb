<% count = 0 %>

<% if @records.count > 0 %>
  <div class="limiter">
    <div class="container-table100">
      <div class="wrap-table100">
        <%= link_to 'New Record', new_record_path %>
        <div class="table100">
            <table class="table-responsive">
              <thead>
                <tr>
                  <th>S/No</th>
                  <th>Name</th>
                  <th>Age</th>
                  <th>Gender</th>
                  <th>Address</th>
                  <th>Health care provider</th>
                  <th>Department</th>
                  <th>Front desk Personel</th>
                  <th colspan="3"></th>
                </tr>
              </thead>

              <tbody>
                <% @records.each do |record| %>
                  <% count += 1 %>
                  <tr>
                    <td><%= count %></td>
                    <td><%= record.name %></td>
                    <td><%= record.age %></td>
                    <td><%= record.gender %></td>
                    <td><%= record.address %></td>
                    <td><%= record.health_care_provider %></td>
                    <td><%= record.department.name %></td>
                    <td><%= record.front_desk_name %></td>
                    <td><%= link_to 'Show', record %></td>
                    <td><%= link_to 'Edit', edit_frontdesk_path(record) %></td>
                    <td><%= link_to 'Destroy', record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
        </div>
        <%= link_to 'New Record', new_record_path %>
      </div>
    </div>
  </div>

<br>
