
      <!-- Start contact-page Area -->
      <section class="contact-page-area section-gap">
        <div class="container">
          <div class="row">
            <div class="col-lg-12">
                <p id="notice"><%= notice %></p> 
            </div>
          </div>
          <div class="row">         
            <div class="col-lg-4 d-flex flex-column address-wrap">
              <div class="single-contact-address d-flex flex-row">
                <div class="icon">
                  <span class="lnr lnr-user"></span>
                </div>
                <div class="contact-details">
                  <h5>Name</h5>
                  <p>
                    <%= @record.name %>
                  </p>
                </div>
              </div>
              <div class="single-contact-address d-flex flex-row">
                <div class="icon">
                  <span class="lnr lnr-mustache"></span>
                </div>
                <div class="contact-details">
                  <h5>Age</h5>
                  <p><%= @record.age %></p>
                </div>
              </div>
              <div class="single-contact-address d-flex flex-row">
                <div class="icon">
                  <span class="lnr lnr-map-marker"></span>
                </div>
                <div class="contact-details">
                  <h5>Address</h5>
                  <p><%= @record.address %></p>
                </div>
              </div> 
              <div class="single-contact-address d-flex flex-row">
                <div class="icon">
                  <span class="lnr lnr-apartment"></span>
                </div>
                <div class="contact-details">
                  <h5>Health Care Provider</h5>
                  <p><%= @record.health_care_provider %></p>
                </div>
              </div> 
              <div class="single-contact-address d-flex flex-row">
                <div class="icon">
                  <span class="lnr lnr-license"></span>
                </div>
                <div class="contact-details">
                  <h5>Department</h5>
                  <p><%= @record.department.name %></p>
                </div>
              </div> 
              <div class="single-contact-address d-flex flex-row">
                <div class="icon">
                  <span class="lnr lnr-user"></span>
                </div>
                <div class="contact-details">
                  <h5>Front Desk Personnel</h5>
                  <p><%= @record.front_desk_name %></p>
                </div>
              </div>  
            </div>
            <div class="col-lg-8"> 
            </div>
            <div class="col-lg-12">
                    <%= link_to 'Edit', edit_frontdesk_path(@record), :class => "genric-btn info" %>  <%= link_to 'All Patients', frontdesk_index_path ,:class => "genric-btn info-border"%>                     
                  </div>
          </div>
        </div>  
      </section>
      <!-- End contact-page Area -->  