<!-- Start contact-page Area -->
      <section class="contact-page-area section-gap">
        <div class="container">
          <div class="row">
            <div class="col-lg-4 d-flex flex-column address-wrap">
              <div class="single-contact-address d-flex flex-row">
                <div class="icon">
                  <span class="lnr lnr-user"></span>
                </div>
                <div class="contact-details">
                  <h5>Name</h5>
                  <p>
                    <%=record.name %>
                  </p>
                </div>
              </div>
              <div class="single-contact-address d-flex flex-row">
                <div class="icon">
                  <span class="lnr lnr-mustache"></span>
                </div>
                <div class="contact-details">
                  <h5>Date Of Birth</h5>
                  <p><%=record.dob %></p>
                </div>
              </div>
              <div class="single-contact-address d-flex flex-row">
                <div class="icon">
                  <span class="lnr lnr-user"></span>
                </div>
                <div class="contact-details">
                  <h5>Gender</h5>
                  <p><%=record.gender %></p>
                </div>
              </div>   
              <div class="single-contact-address d-flex flex-row">
                <div class="icon">
                  <span class="lnr lnr-map-marker"></span>
                </div>
                <div class="contact-details">
                  <h5>Address</h5>
                  <p><%=record.address %></p>
                </div>
              </div>  
              <div class="single-contact-address d-flex flex-row">
                <div class="icon">
                  <span class="lnr lnr-apartment"></span>
                </div>
                <div class="contact-details">
                  <h5>Health Care Provider</h5>
                  <p><%=record.health_care_provider %></p>
                </div>
              </div> 
              <div class="single-contact-address d-flex flex-row">
                <div class="icon">
                  <span class="lnr lnr-license"></span>
                </div>
                <div class="contact-details">
                  <h5>Department</h5>
                  <p><%= record.department.name %></p>
                </div>
              </div> 
                <div class="single-contact-address d-flex flex-row">
                  <div class="icon">
                    <span class="lnr lnr-pointer-down"></span>
                  </div>
                  <div class="contact-details">
                    <h5>Weight</h5>
                    <p><%= @record.weight %></p>
                  </div>
                </div> 
                <div class="single-contact-address d-flex flex-row">
                  <div class="icon">
                    <span class="lnr lnr-pointer-up"></span>
                  </div>
                  <div class="contact-details">
                    <h5>Height</h5>
                    <p><%= @record.height %></p>
                  </div>
                </div> 
                <div class="single-contact-address d-flex flex-row">
                  <div class="icon">
                    <span class="lnr lnr-hand"></span>
                  </div>
                  <div class="contact-details">
                    <h5>Temperature</h5>
                    <p><%= @record.temperature %></p>
                  </div>
                </div> 
                <div class="single-contact-address d-flex flex-row">
                  <div class="icon">
                    <span class="lnr lnr-database"></span>
                  </div>
                  <div class="contact-details">
                    <h5>Blood Presure</h5>
                    <p><%= @record.blood_pressure %></p>
                  </div>
                </div>                                                  
            </div>
            <div class="col-lg-8">
              <div class="row">
                <div class="col-lg-12 d-flex flex-column address-wrap">
                      <div class="single-contact-address d-flex flex-row">
                        <div class="icon">
                          <span class="lnr lnr-bug"></span>
                        </div>
                        <div class="contact-details">
                          <h5>Complaint</h5>
                          <p><%= @record.complaints %></p>
                        </div>
                      </div> 
                      <div class="single-contact-address d-flex flex-row">
                        <div class="icon">
                          <span class="lnr lnr-funnel"></span>
                        </div>
                        <div class="contact-details">
                          <h5>Diagnosis</h5>
                          <p><%= @record.icd.title %></p>
                        </div>
                      </div> 
                      <div class="single-contact-address d-flex flex-row">
                        <div class="icon">
                          <span class="lnr lnr-magic-wand"></span>
                        </div>
                        <div class="contact-details">
                          <h5>Treatment</h5>
                          <p><%= @record.treatment %></p>
                        </div>
                      </div> 
                    </div> 
              </div>
              <%= form_for(record, :html => {:class => "form-area contact-form text-right"}) do |f| %>
                <% if record.errors.any? %>
                  <div id="error_explanation">
                    <h2><%= pluralize(record.errors.count, "error") %> prohibited this record from being saved:</h2>

                    <ul>
                    <% record.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                    </ul>
                  </div>
                <% end %> 
                <div class="row"> 
                  <div class="col-lg-6 form-group">
                  <%= f.text_field :drugs_given , class: "common-input mb-20 form-control", placeholder: "Drugs given" %>
                  <div class="col-lg-12">
                      <%= f.submit "Update Record", :class=>"genric-btn primary" %>                
                  </div>
                </div>
              <% end %>
                  </div>
                </div>
            </div>
          </div>
        </div>  
      </section>
      <!-- End contact-page Area -->

