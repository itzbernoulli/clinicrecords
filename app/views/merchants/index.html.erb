<p id="notice"><%= notice %></p>

<h1>Merchants</h1>

<table>
  <thead>
    <tr>
      <th>Instagram</th>
      <th>Facebook</th>
      <th>Twitter</th>
      <th>Website</th>
      <th>Feature image</th>
      <th>Short description</th>
      <th>Long description</th>
      <th>Category</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @merchants.each do |merchant| %>
      <tr>
        <td><%= merchant.instagram %></td>
        <td><%= merchant.facebook %></td>
        <td><%= merchant.twitter %></td>
        <td><%= merchant.website %></td>
        <td><%= merchant.feature_image %></td>
        <td><%= merchant.short_description %></td>
        <td><%= merchant.long_description %></td>
        <td><%= merchant.category %></td>
        <td><%= merchant.user %></td>
        <td><%= link_to 'Show', merchant %></td>
        <td><%= link_to 'Edit', edit_merchant_path(merchant) %></td>
        <td><%= link_to 'Destroy', merchant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Merchant', new_merchant_path %>
