<div id="items_grid" >
<% if @selected.nil? %>
	<div class="row">
	<div class="col-md-12">
	    <div class="jumbotron">
	      <p class="lead">Home</p>
	      <p>Home Text</p>
	    </div>
	 </div>
 </div>

 <div class="col-xl-12 review">
		<h4>Merchants</h4>
		
		<ul class="list-group">
			<% @seventyplus.each do |merchant| %>

				<%= link_to merchant_static_path(merchant)  do %>
				  <li class="list-group-item clickable">
					  	<div class="row">
						  	<div class="col-sm-2">
						  		<%= image_tag merchant.feature_image, :alt => 'merchant_image', :style=>"height: 50px; width: 50px; display: block;" %>
						  	</div>
						  	<div class="col-sm-10">
						  		<h6><%= merchant.instagram%></h6>
						  		<%= merchant.short_description %>
						  		<div class="row">
							  		<div class="col-md-12 offset-md-9">

							  		<%= link_to merchant_static_path(merchant), :class=>"btn btn-outline-primary btn-sm" do %>
								  			<i class="fa fa-caret-up"><%= Rating.total_rating(merchant) %></i>
								  	<% end %>

								  		<%= link_to merchant_static_path(merchant), :class=>"btn btn-outline-primary btn-sm" do %>
								  			<i class="fa fa-comment"><%= merchant.reviews.count %></i>
								  		<% end %>	
							  		</div>
							  	</div>
						  	</div>
						  </div>
				  </li>
		  		<% end %>
		  <% end %>
		</ul>
	</div>
<% else %>
<div class="row">
	<div class="col-md-12">
		
	    <div class="jumbotron img-responsive center-block tint text-white" style="background-image: url('http://www.doccloud.nu/wp-content/uploads/2016/03/serverroom-700x150.jpg'); background-size: cover;">
	      <p class="lead"><%= @selected.name %></p>
	      <p><%= @selected.description %></p>
	    </div>
	 </div>
 </div>

<div class="row">
	<div class="col-xl-12 review">
		<h4>Merchants</h4>
		
		<ul class="list-group">
			<% @selected.merchants.each do |merchant| %>

				<%= link_to merchant_static_path(merchant)  do %>
				  <li class="list-group-item clickable">
					  	<div class="row">
						  	<div class="col-sm-2">
						  		<%= image_tag merchant.feature_image, :alt => 'merchant_image', :style=>"height: 50px; width: 50px; display: block;" %>
						  	</div>
						  	<div class="col-sm-10">
						  		<h6><%= merchant.instagram%></h6>
						  		<%= merchant.short_description %>
						  		<div class="row">
							  		<div class="col-md-12 offset-md-9">

							  		<%= link_to merchant_static_path(merchant), :class=>"btn btn-outline-primary btn-sm" do %>
								  			<i class="fa fa-caret-up"><%= Rating.total_rating(merchant) %></i>
								  	<% end %>

								  		<%= link_to merchant_static_path(merchant) + "#review", :class=>"btn btn-outline-primary btn-sm" do %>
								  			<i class="fa fa-comment"><%= merchant.reviews.count %></i>
								  		<% end %>	
							  		</div>
							  	</div>
						  	</div>
						  </div>
				  </li>
		  		<% end %>
		  <% end %>
		</ul>
	</div>
</div>
<% end %>
</div>